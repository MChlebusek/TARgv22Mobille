<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TARgv22.Valgusfoor">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />
            <Frame x:Name="redCircleFrame" WidthRequest="100" HeightRequest="100" CornerRadius="50" BackgroundColor="Gray" />
            <Frame x:Name="yellowCircleFrame" WidthRequest="100" HeightRequest="100" CornerRadius="50" BackgroundColor="Gray" />
            <Frame x:Name="greenCircleFrame" WidthRequest="100" HeightRequest="100" CornerRadius="50" BackgroundColor="Gray" />
            <Label x:Name="statusTextLabel" Text="" FontSize="18" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0" />
            <Button Text="Sisse" Clicked="OnSisseClicked" Margin="0,20,0,0" />
            <Button Text="Välja" Clicked="OnValjaClicked" Margin="0,20,0,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>


